{
  "tasks": [
    {
      "label": "build c debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-march=native",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ]
    },
    {
      "label": "build c optimized",
      "type": "shell",
      "command": "g++",
      "args": [
        "-O3",
        "-march=native",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build assembly",
      "type": "shell",
      "command": "g++",
      "args": [
        "-O3",
        "-march=native",
        "-S",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.s"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    }
  ],
  "version": "2.0.0"
}
